<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 动画图片 -->
    <ImageView
        android:id="@+id/TweenImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@mipmap/tween" />
    <!-- 动画控制按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onBtnScaleAnimClick"
            android:text="ScaleAnim" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onBtnAlphaAnimClick"
            android:text="AlphaAnim" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onBtnTranslateAnimClick"
            android:text="TranslateAnim" />
        <Button android:text="RotateAnim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onBtnRotateAnimClick"/>
    </LinearLayout>
</LinearLayout>
